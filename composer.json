{
    "name": "dburiy/guzzle-router",
    "description": "Guzzle router",
    "type": "library",
    "version": "2.0",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "Dburiy\\Router\\": "src"
        }
    },
    "authors": [{
        "name": "Buriy Dima",
        "email": "dburiy@gmail.com",
        "role": "Developer"
    }],
    "require-dev": {
        "phpstan/phpstan": "^0.12.9",
        "phpunit/phpunit": "^8"
    },
    "scripts": {
        "phpstan": "phpstan analyse -l 5 -c phpstan.neon src --no-interaction --no-progress",
        "tests": "phpunit tests --bootstrap vendor/autoload.php"
    }
}
