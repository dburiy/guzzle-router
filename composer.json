{
    "name": "dburiy/guzzle-router",
    "description": "Guzzle router",
    "type": "library",
    "version": "1.0",
    "license": "MIT",
    "require": {
        "php": "^7.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Dburiy\\Router\\": "src"
        }
    },
    "authors": [{
        "name": "Buriy Dima",
        "email": "dburiy@gmail.com",
        "role": "Developer"
    }],
    "require-dev": {
        "phpstan/phpstan": "^0.12.9"
    },
    "scripts": {
        "phpstan" : "phpstan analyse -l 5 -c phpstan.neon src --no-interaction --no-progress"
    }
}
